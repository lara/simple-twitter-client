<h1>Home</h1>
<% if current_user %>
  <p>Hello <%= current_user.name %>!</p>
  <p><%= link_to "sign out", sign_out_path, method: :post %></p>
    <div class="pagination">
      <%= paginate tweets %>
    </div>

  <%= form_for :tweet, url: tweets_path do |f| %>
    <%= f.text_area :text, maxlength: 280 %>
    <%= f.submit %>
  <% end %>

  <% tweets.each do |tweet| %>
    <p><%= tweet.text.html_safe %></p>
  <% end %>
<% else %>
  <p><%= link_to "Sign in with Twitter", "/auth/twitter" %></p>
<% end %>
